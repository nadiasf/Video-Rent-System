@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Movies</h2>
<hr />
<div class="container">

    <div class="row" style="margin-top:2rem;">
        <div class="col-md-12">
            <table id="movies" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Genre</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>
    </div>
</div>

@section scripts{
    <script>
        var tableMovies = $("#movies").DataTable({
            ajax: {
                url: "/Api/Movies",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name"
                },
                {
                    data: "genre.name"
                }
            ]
        });

    </script>
}
